@page "/valkyries"
@using honkai_wiki.Services
@using honkai_wiki_api.Models
@inject IValkyrieService ValkyrieService

<style>
    #valkyries {
        display: grid;
        grid-template-columns: 100px repeat(auto-fill, 100px) 110px;
        grid-gap: 30px;
    }
</style>

<h1 class="mt-3">Valkyries</h1>

@if (v is null)
{
    <h3>Out for vacation, be back soon! :) @msg</h3>
}
else
{
    <div id="valkyries">
        @foreach (var valk in v)
        {
            <InfoCard Name="@valk.Name" Image="@valk.Image"></InfoCard>
        }
    </div>
}

@code {
    List<Valkyrie>? v;
    protected override async Task OnInitializedAsync()
    {
        v = await ValkyrieService.GetValkyries();
    }
}